/* pages/main/main.wxss */
.top{
  height:35px;
  background-color: rgb(236, 49, 49);
  color: white;
  font-size: 14px;
}
.text{
  height:35px;
  font-size: 14px;
  position: relative;
}
.input{
  border:1px solid lightgrey;
  width:100%;
  border-radius: 4px;
  font-size: 11px;
}
input::-webkit-input-placeholder{
  color:red;
}
.search{
  position: absolute;
  width: 9px;
  height: 9px;
  border:1px solid lightgray;
  border-radius: 50%;
  right:25px;
  bottom:8px;
}
.search2{
  position: absolute;
  width: 10px;
  height: 2px;
  transform:rotate(38deg);
  border:1px solid lightgray;
  border-radius: 50%;
  right:16px;
  bottom:6px;
}
.subtop{
  height:30px;
  display: flex;
  padding:10px;
  line-height: 16px;
 
}
.topleft{
  border: black 1px solid;
  display: flex;
}
.icon{
  border-left: white 4px solid ;
  border-bottom: white 4px solid ;
  transform:rotate(45deg);
  width:10px;
  height:10px;
  margin-right: 5px;
}
.bottom{
  border-bottom: rgb(224, 221, 221) 1px solid;
  padding:15px;
  display: flex;
}
.news{
  height:60px;
  width:65%;
  margin-right: 10px;
}
.photo{
  height:60px;
  width:35%;
}
.news-img{
  width: 100%;
  height: 100%;
}
.tittle{
  font-size: 15px;
  height:37px;
}
.source{
  margin-top:12px; 
  height:15px;
  display: flex;
}
.sor{
  font-size: 10px;
  color:rgb(177, 174, 174);
  padding-right: 20px;
}