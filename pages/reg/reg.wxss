input{
  border: rgb(240, 99, 99) 1px solid;
  margin: 0 auto;
  margin-bottom: 20px;
  width: 90%;
  height: 30px;
  border-radius: 5px;
  padding-left: 5px;
}
.input-placeholder{
  color:rgb(217, 204, 204);
}
.photo{
  padding-left:12px;
  color:rgb(217, 204, 204);
}
.upload{
  margin-top: 3px;
  border:1px solid rgb(217, 204, 204);
  width:35px;
  height:35px;
  border-radius: 5px;
  font-size: 40px;
  color:rgb(78, 73, 73);
  text-align: center;
  line-height:30px;
}
.btn{
  width:95%;
  height:38px;
  border-radius: 5px;
  background-color:rgb(241, 47, 47);
  margin: 0 auto;
  margin-top:40px;
}
button{
  height:30px;
  color:rgb(236, 173, 173);
  font-size: 14px;
}
navigator{
  margin-top: 15px;
  font-size:14px;
  color:purple;
  text-decoration:underline;
  padding-right: 5px;
  text-align: right;
}