/* miniprogram/pages/my/my.wxss */
.top{
  height:130px;
  background-color: rgb(236, 49, 49);
  color: white;
  font-size: 14px;
  display: flex;
  justify-content: center;
  align-items: center;
}
.self{
  width:35%;
  height:60%;
}
.myphoto{
  width:60px;
  height:60px;
  border-radius: 50%;
  margin:0 auto;
  margin-bottom: 5px;
}
.name{
  text-align: center;
}
.text{
  height:35px;
  font-size: 14px;
  position: relative;
}
.text{
  border:1px solid lightgrey;
  background-color:lightgrey;
  margin-top: 20px;
  padding-left: 5px;
  width:100%;
  height:28px;
  border-radius: 4px;
  color:white;
  font-size: 14px;
  line-height: 25px;
}
.btn{
  width:65%;
  height:38px;
  background-color:rgb(241, 47, 47);
  margin: 0 auto;
  margin-top:40px;
}
button{
  border-radius: 3px;
  color:rgb(236, 173, 173);
  font-size: 14px;
  line-height: 10px;
}

