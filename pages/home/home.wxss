.top{
  height:35px;
  background-color: rgb(236, 49, 49);
  color: white;
  font-size: 14px;
}
.subtop{
  height:30px;
  display: flex;
  padding:10px;
  line-height: 16px;
  justify-content: space-between;
}
.topleft{
  display: flex;
  width:170px;
  justify-content: space-around;
}
.topright{
  width:20px;
}
.sel{
  font-size: 16px;
  font-weight: 300;
}
.icon1{
  border:white 2px solid;
  width:9px;
  height:9px;
  border-radius: 50%; 
  position: relative;
}
.icon2{
  border-top:3px white solid;
  width:12px;
  transform:rotate(45deg);
  position: absolute;
  right:8px;
}
.bottom{
  border-bottom: rgb(224, 221, 221) 1px solid;
  padding:15px;
  display:flex;
}
.news{
  height:60px;
  width:65%;
  margin-right: 10px;
}
.photo{
  height:60px;
  width:35%;
}
.news-img{
  width: 100%;
  height: 100%;
}
.tittle{
  font-size: 15px;
  height:37px;
}
.source{
  margin-top:12px; 
  height:15px;
  display: flex;
}
.sor{
  font-size: 10px;
  color:rgb(177, 174, 174);
  padding-right: 20px;
}